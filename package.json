{
  "name": "scrape-then-ebook",
  "version": "1.0.0",
  "description": "Scrapes a website then generates an ebook",
  "type": "module",
  "scripts": {
    "delete": "rm -rf ./build ./output",
    "scrape": "tsx src/scrape.ts",
    "scrape-link": "tsx src/utils/scrape-parse-save.ts",
    "merge": "tsx src/merge.ts",
    "find-images": "grep -ER '!\\[\\]\\(' output --color=always",
    "get-images": "tsx src/get-images.ts",
    "clean-html": "tsx src/utils/clean-html.ts",
    "ebook": "bash src/make-ebook.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aspectum/scrape-then-ebook.git"
  },
  "author": "Pedro Garcia",
  "license": " GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/aspectum/scrape-then-ebook/issues"
  },
  "homepage": "https://github.com/aspectum/scrape-then-ebook#readme",
  "dependencies": {
    "@mozilla/readability": "^0.4.2",
    "@types/node": "^18.0.5",
    "axios": "^0.27.2",
    "htmltidy2": "^1.0.0",
    "linkedom": "^0.14.9"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.8",
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.49",
    "eslint": "^8.0.1",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "tsx": "^3.12.3",
    "typescript": "^4.7.4"
  }
}
