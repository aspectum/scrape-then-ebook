{
  "name": "scrape-then-ebook",
  "version": "1.0.0",
  "description": "Scrapes a website then generates an ebook",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "build": "esbuild `find src -name '*.ts'` --outdir=build",
    "clean": "rm -rf ./build ./output",
    "node": "node -r dotenv/config --experimental-specifier-resolution=node",
    "scrape": "yarn build && yarn run node build/scrape.js",
    "scrape-link": "yarn build && yarn run node build/utils/scrape-parse-save.js",
    "merge": "yarn build && yarn run node build/merge.js",
    "find-images": "grep -ER '!\\[\\]\\(' output --color=always",
    "get-images": "yarn build && yarn run node build/get-images.js",
    "ebook": "bash src/make-ebook.sh",
    "postinstall": "git apply patch/sloppy.patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aspectum/scrape-then-ebook.git"
  },
  "author": "Pedro Garcia",
  "license": " GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/aspectum/scrape-then-ebook/issues"
  },
  "homepage": "https://github.com/aspectum/scrape-then-ebook#readme",
  "dependencies": {
    "@joplin/turndown-plugin-gfm": "^1.0.44",
    "@mozilla/readability": "^0.4.2",
    "@types/node": "^18.0.5",
    "@types/turndown": "^5.0.1",
    "axios": "^0.27.2",
    "linkedom": "^0.14.9",
    "turndown": "^7.1.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.8",
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.49",
    "eslint": "^8.0.1",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "typescript": "^4.7.4"
  }
}
